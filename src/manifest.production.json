{
  "manifest_version": 2,
  "name": "stop-mess-around",
  "version": "1.1.0",
  "description": "防摸鱼插件: 通过强制的手段禁止大家浪费时间摸鱼：在上班/学习期间下意识的打开摸鱼网站, 自动检测摸鱼网站, 提示激励信息后, 关闭摸鱼网站, 滚去学习，滚去做对未来有益的事情！",
  "options_page": "options.html",
  "short_name": "StopMessAround",
  "author": {
    "name": "OBKoro1",
    "email": "obkoro1@foxmail.com",
    "url": "http://obkoro1.com/web_accumulate/"
  },
  "homepage_url": "https://github.com/OBKoro1/stop-mess-around",
  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_icon": "img/48.png",
    "default_title": "防摸鱼插件: 通过强制的手段禁止大家浪费时间摸鱼：在上班/学习期间下意识的打开摸鱼网站, 自动检测摸鱼网站, 提示激励信息后, 关闭摸鱼网站, 滚去学习，滚去做对未来有益的事情！",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/48.png",
    "48": "img/48.png",
    "128": "img/48.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "http://*/*", 
		"https://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/content.css"],
      "js": ["js/content.js"],
      "run_at": "document_end"
    }
  ],
  "omnibox": { "keyword" : "stop mess around" },
  "offline_enabled": true,
  "web_accessible_resources": ["fonts/*.*"],
  "default_locale": "zh_CN"
}
